<p id="notice"><%= notice %></p>

<h1>Clients</h1>

Projects: <%= link_to('see', :projects) %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Projects</th>
      <th>Profitable?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.projects.count %></td>
        <td><%= client.profitable? ? 'Yes' : 'No' %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client', new_client_path %>
